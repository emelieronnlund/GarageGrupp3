@model IEnumerable<Garage2._0.Models.Vehicle>

@*@{
    ViewBag.Title = "Detailed_list";
}*@

<h1>Detaljerad lista</h1>
<hr />
<p>@DateTime.Now</p>
<h2>Sök</h2>
@Html.Action("_FilterDetailed")
<p>
    @Html.ActionLink("Lägg till fordon", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle_Type.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleOwner.OwnerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParkingIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParkingOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParkingSpaceNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reserved)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle_Type.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleOwner.OwnerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkingIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkingOut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParkingSpaceNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reserved)
        </td>
        <td>
            @Html.ActionLink("Ändra", "Edit", new { id = item.VehicleID }) |
            @Html.ActionLink("Visa", "Details", new { id = item.VehicleID }) |
            @Html.ActionLink("Ta bort", "Delete", new { id = item.VehicleID })
        </td>
    </tr>
}

</table>
